{% extends 'layout.twig' %}
{% extends 'layout.twig' %}
{% include "header.twig" %}
{% block body %}
    {% include "navbar.twig" %}

    <div class=" card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0">Información del usuario</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/user/edit/{{user._id}}" role="form" autocomplete="off">
            <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Nombre</label>
                    <div class="col-lg-9">
                        <input type ="text" class="form-control" name="name" value={{user.name}} >
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Género</label>
                    <div class="col-lg-9">
                        <select class="form-control" name="gender">
                            {% if user.gender=="MAN" %}
                                <option value="MAN" selected>Hombre</option>
                                <option value="WOMAN">Mujer</option>
                            {% else %}
                                <option value="WOMAN" selected>Mujer</option>
                                <option value="MAN">Hombre</option>

                            {% endif %}
                        </select>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


{% endblock %}
