{% extends 'layout.twig' %}
{% include "header.twig" %}

{% block body %}
	{% include "navbar.twig" %}
	<div class=" card-outline-secondary">
		<div class="card-header">
			<h3 class="mb-0">Información del usuario</h3>
		</div>
		<div class="card-body">
			<form method="POST" action="/user/add" role="form" autocomplete="off">
				<div class="form-group row">
					<label class="col-lg-3 col-form-label form-control-label">Login</label>
					<div class="col-lg-4">
						<input class="form-control" type="text" name="login" required>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-lg-3 col-form-label form-control-label">Contraseña</label>
					<div class="col-lg-4">
						<input class="form-control" type="password" name="passwd" required>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-lg-3 col-form-label form-control-label">Nombre</label>
					<div class="col-lg-4">
						<input id="data" class="form-control" type="text" name="name" required>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-lg-3 col-form-label form-control-label">Email</label>
					<div class="col-lg-4">
						<input id="data" class="form-control" type="email" name="email" required>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-lg-3 col-form-label form-control-label">DNI</label>
					<div class="col-lg-4">
						<input class="form-control" type="text" name="dni" required/>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-lg-3 col-form-label form-control-label">Género</label>
					<div class="col-lg-4">
						<select name="gender" >
							<option id="man-select" value="MAN">Hombre</option>
							<option id="woman-select" value="WOMAN">Mujer</option>
						</select>
					</div>
				</div>
                <div class="form-group row">
					<label class="col-lg-3 col-form-label form-control-label">Rol</label>
					<div class="col-lg-4">
						<select name="role" >
							<option id="man-select" value="ATHLETE">Atleta</option>
							<option id="woman-select" value="COACH">Entrenador</option>
                            <option id="woman-select" value="ADMIN">Admin</option>
						</select>
					</div>
				</div>

				<div class="form-group row">
					<label class="col-lg-3 col-form-label form-control-label"></label>
					<div class="col-lg-9">
						<button type="submit">
							<div class="tournament-add-add">
								<img src="/static/icons/add.svg" alt="add">
								<span>Crear</span>
							</div>
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>

	<script>

		$(function () {
$('[data-toggle="datepicker"]').datepicker({autoHide: true, zIndex: 2048, format: 'yyyy-mm-dd', startDate: Date.now()});
});
	</script>
{% endblock %}
