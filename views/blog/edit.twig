{% extends "layout.twig" %}
{% include "header.twig" %}
{% block body %}
{% include "navbar.twig" %}


<div class=" card-outline-secondary">
  <div class="card-header">
    <h3 class="mb-0">Información de la publicación</h3>
  </div>
  <div class="card-body">
    <form method=POST action="/blog/edit/{{blog._id}}" role="form" autocomplete="off">
      <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">Título</label>
        <div class="col-lg-9">
          <input class="form-control" type="text" name="title" value="{{blog.title}}">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">Cuerpo</label>
        <div class="col-lg-9">
          <textarea rows=8 class="form-control" type="text" name="body">{{blog.body}}</textarea>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label"></label>
        <div class="col-lg-9">
          <button type="submit">
              <div class="tournament-showall-edit">
                  <img src="/static/icons/edit.svg" alt="edit">
                  <span>Editar publicación</span>
                </div>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}