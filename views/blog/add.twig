{% extends 'layout.twig' %}
{% include "header.twig" %}

{% block body %}
{% include "navbar.twig" %}
<div class=" card-outline-secondary">
  <div class="card-header">
    <h3 class="mb-0">Nueva publicación</h3>
  </div>
  <div class="card-body">
    <form method=POST action="/blog/add" role="form" autocomplete="off">
      <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">Título</label>
        <div class="col-lg-9">
          <input class="form-control" type="text" name="title">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">Cuerpo</label>
        <div class="col-lg-9">
          <textarea class="form-control" rows=8 type="text" name="body"></textarea>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label"></label>
        <div class="col-lg-9">
          <button type="submit">
            <div class="tournament-add-add">
              <img src="/static/icons/add.svg" alt="add">
              <span>Añadir</span>
            </div>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock body %}