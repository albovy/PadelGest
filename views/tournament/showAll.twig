{% extends 'layout.twig' %}

{% block body %}
{% include "navbar.twig" %}
<div class="tournament-showall-container">
    {% if not tournaments %}
        <h1>No hay torneos disponibles</h1>
    {% else %}

        {% for tournament in tournaments %}
            <div class="tournament-row">
                <div class="tournament-information-container">
                    <div class="card">
                        {% if user.role == 'ADMIN' %}
                            <a href="/tournament/add">Crear torneo</a>
                            <a href="/tournament/edit/{{tournament._id}}">Editar torneo</a>
                        {% endif %}

                        <h2>{{tournament.title}}</h2>
                        <p>{{tournament.description}}</p>
                        <p>{{tournament.startDate}}</p>
                        <p>{{tournament.finishDate}}</p>
                        <!-- <form method=post action="/inscription/tournament/{{tournament._id}}">
                                                                        <button type="submit">borrar</button> 
                                                                        </form>-->
                        {% if user.role == 'ATHLETE' %}
                            {% if tournament.started %}
                                {% if tournament.inscripted %}

                                    <a href="/clash/tournament/{{tournament._id}}">Mis enfrentamientos</a>
                                    <a href="/clasification/tournament/{{tournament._id}}">Clasificaci√≥n</a>
                                {% endif %}
                            {% else %}
                                {% if not tournament.inscripted %}
                                    <div class="tournament-inscription-form-container">
                                        <form method="post" action="/inscription/tournament/{{tournament._id}}">
                                            <input name="user2_login">Login pareja</input>
                                        <input name="category">Categoria</input>
                                    <button type="submit">Inscribirse</button>

                                </form>
                            {% endif %}
                        {% endif %}


                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endfor %}{% endif %}</div>{% endblock %}
