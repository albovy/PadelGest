{% extends 'layout.twig' %}
{% include "header.twig" %}

{% block body %}
{% include "navbar.twig" %}
<div class=" card-outline-secondary">
                        <div class="card-header">
                            <h3 class="mb-0">Información del torneo</h3>
                        </div>
                        <div class="card-body">
                            <form method=POST action="/tournament/add" role="form" autocomplete="off">
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label">Título</label>
                                    <div class="col-lg-9">
                                        <input class="form-control" type="text" name="title">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label">Descripcion</label>
                                    <div class="col-lg-9">
                                        <input class="form-control" type="text" name="description">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label">Fecha Inicio</label>
                                    <div class="col-lg-9">
                                        <input id="data" class="form-control" data-toggle="datepicker"  name="startDate" readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label">Fecha Fin</label>
                                    <div class="col-lg-9">
                                        <input id="data" class="form-control" data-toggle="datepicker" name="finishDate" readonly>
                                    </div>
                                </div>
                              
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label"></label>
                                    <div class="col-lg-9">
                                        <button type="submit" class="btn btn-primary">Crear</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

    <script>

        $(function () {
            $('[data-toggle="datepicker"]').datepicker({
                autoHide: true,
                zIndex: 2048,
                format: 'yyyy-mm-dd',
                startDate: Date.now(),

            });
        });
        
    </script>
{% endblock %}